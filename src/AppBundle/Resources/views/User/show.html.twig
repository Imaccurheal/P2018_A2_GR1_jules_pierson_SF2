{% extends '::layout.html.twig' %}

{% block content -%}
    <section>
        <h1>List of articles published by {{ user.firstname }} {{ user.lastname }}</h1>
        <ul class="list-group">
            {% for article in user.article %}
                <li class="list-group-item">
                    <a href="{{ path('article_show', {'id': article.id}) }}">{{ article.title }}</a>
                </li>
            {% endfor %}
        </ul>
    </section>
{% endblock %}
